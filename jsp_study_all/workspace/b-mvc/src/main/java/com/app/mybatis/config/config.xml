<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "https://mybatis.org/dtd/mybatis-3-config.dtd">

<!-- MyBatis 설정의 시작점이자 모든 설정을 담는 역할 -->
<configuration>
	<settings>
		<!-- 자바가 사용하는 카멜 표기법도 허용한다. -->
		<setting name="mapUnderscoreToCamelCase" value="true"/>
	</settings>
	<typeAliases>
		<typeAlias type="com.app.domain.member.vo.MemberVO" alias="memberVO"/>
	</typeAliases>
	
	<!-- DB 환경설정, 기본 환경을 mysql로 사용한다 -->
	<environments default="mysql">
		<environment id="mysql">
			<transactionManager type="JDBC"/>
			<dataSource type="POOLED">
				<property name="driver" value="com.mysql.cj.jdbc.Driver"/>
				<property name="url" value="jdbc:mysql://localhost:3306/jsp?useSSL=false&amp;serverTimezone=Asia/Seoul&amp;allowPublicKeyRetrieval=true"/>
				<property name="username" value="dbms"/>
				<property name="password" value="1234"/>
			</dataSource>
		</environment>
	</environments>
	
	
	
	<!-- SQL문이 작성된 memberMapper.xml 파일 등록 -->
	<mappers>
		<mapper resource="com/app/mybatis/mapper/memberMapper.xml"/>
	</mappers>
	
</configuration>